            <TextBlock x:Name="All_Volume_T" Height="50" Width="200" TextWrapping="Wrap" Text="全体音量:100" Foreground="Aqua" FontSize="33" Margin="-1150,825,0,0" VerticalAlignment="Top" TextAlignment="Center"/>
