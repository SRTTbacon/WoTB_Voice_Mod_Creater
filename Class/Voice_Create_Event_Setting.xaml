            <TextBlock x:Name="LPF_Start_T" Height="45" Width="100" TextWrapping="Wrap" Text="LPF:0" Foreground="Aqua" FontSize="33" Margin="-1550,100,0,0" VerticalAlignment="Top" TextAlignment="Center"/>
