            <TextBlock x:Name="Voice_T" Height="75" Width="775" Foreground="Aqua" Margin="-1920,75,0,0" FontSize="55" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextAlignment="Center"/>
            <Button x:Name="Voice_Back_B" Content="←" HorizontalAlignment="Left" Margin="-1170,155,0,0" VerticalAlignment="Top" Width="200" Height="70" Background="Transparent" Foreground="Aqua" BorderBrush="Aqua" FontSize="50" Click="Voice_Back_Click"/>
            <Button x:Name="Voice_Front_B" Content="→" HorizontalAlignment="Left" Margin="-965,155,0,0" VerticalAlignment="Top" Width="200" Height="70" Background="Transparent" Foreground="Aqua" BorderBrush="Aqua" FontSize="50" Click="Voice_Front_Click"/>
