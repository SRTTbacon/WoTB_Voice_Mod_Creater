            <Button x:Name="Server_List_Update_B" Content="リストを更新" HorizontalAlignment="Left" Margin="-600,805,0,0" VerticalAlignment="Top" Width="350" Height="95" Background="Transparent" Foreground="Aqua" BorderBrush="Aqua" FontSize="30" Click="Server_List_Update_B_Click"/>
            <TextBlock x:Name="User_Name_Text" Height="50" Width="174" TextWrapping="Wrap" Text="ユーザー名:" Foreground="Aqua" FontSize="40" Margin="-2700,625,0,0" VerticalAlignment="Top"/>
