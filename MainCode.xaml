            <TextBlock x:Name="Server_Create_Name_T" Height="50" Width="688" TextWrapping="Wrap" Text="制作者:" Foreground="Aqua" FontSize="40" Margin="-1920,85,0,0" VerticalAlignment="Top" TextAlignment="Center"/>
