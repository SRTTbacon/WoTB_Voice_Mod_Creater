            <Button x:Name="Voice_Stop_B" Content="停止" HorizontalAlignment="Left" Margin="-600,150,0,0" VerticalAlignment="Top" Width="257" Height="82" Background="Transparent" Foreground="Aqua" BorderBrush="Aqua" FontSize="30" Click="Voice_Stop_B_Click"/>
