            <TextBlock x:Name="Password_Text" Height="50" Width="260" Margin="-750,300,0,0" Foreground="Aqua" FontSize="40" TextWrapping="Wrap" Text="パスワードを入力" VerticalAlignment="Top" TextAlignment="Center" Visibility="Hidden"/>
