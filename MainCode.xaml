            <TextBox x:Name="Chat_Send_T" Height="50" TextWrapping="Wrap" Text="" FontSize="35" VerticalAlignment="Top" Width="500" Margin="-870,890,0,0"/>
            <Button x:Name="Chat_Send_B" Content="送信" Height="50" VerticalAlignment="Top" Width="120" Margin="-250,890,0,0" FontSize="35" Foreground="Aqua" Background="Transparent" BorderBrush="Aqua" Click="Chat_Send_B_Click"/>
            <Button x:Name="Chat_Mode_Public_B" Content="全体" Height="50" VerticalAlignment="Top" Width="198" Margin="-1167,310,0,0" FontSize="35" Foreground="Aqua" Background="Transparent" BorderBrush="Aqua" Click="Chat_Mode_Public_B_Click"/>
            <Button x:Name="Chat_Mode_Server_B" Content="サーバー" Height="50" VerticalAlignment="Top" Width="198" Margin="-757,310,0,0" FontSize="35" Foreground="Aqua" Background="Transparent" BorderBrush="Aqua" Click="Chat_Mode_Server_B_Click"/>
